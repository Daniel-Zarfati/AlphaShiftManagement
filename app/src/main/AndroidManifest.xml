<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alpha_shiftmanagement">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlphaShiftManagement">
        <activity android:name=".view.IntroductoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.NewForgotPasswordActivity" />
        <activity android:name=".view.NewShowProfileActivity" />
        <activity android:name=".view.NewRegisterActivity" />
        <activity android:name=".view.NewMainActivity" />
        <activity android:name=".view.SplashOpeningActivity" />
        <activity android:name=".view.UpdateUserProfile" />
        <activity android:name=".view.ShowUserProfile" />
        <activity android:name=".view.CreateUserProfile" />
        <activity android:name=".view.MainActivity">
        </activity>
        <activity android:name=".fragment.SecondActivity" />
    </application>

</manifest>