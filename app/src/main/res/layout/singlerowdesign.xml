<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="8dp"
    app:cardUseCompatPadding="true"
    tools:context=".view.NewManagerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/TakingPlace_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/uploadimagelogo"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            />

        <TextView
            android:id="@+id/Et_TakingPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taking place"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/TakingPlace_img"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/Et_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/TakingPlace_img"
            android:layout_below="@id/Et_TakingPlace"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/Et_Availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Left"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/TakingPlace_img"
            android:layout_below="@id/Et_Date"
            android:layout_marginLeft="10dp"/>

</RelativeLayout>
</androidx.cardview.widget.CardView>